@model IEnumerable<GestorEventos.Servicios.Entidades.Models.EventoModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/reserva/style_Persona.css" />
<div class="persona_container">
<h1>Index</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreEvento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaEvento)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreEvento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaEvento)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.IdEvento }) |
                    @Html.ActionLink("Details", "Details", new { id = item.IdEvento }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.IdEvento })
            </td>
        </tr>
}
    </tbody>
</table>
</div>