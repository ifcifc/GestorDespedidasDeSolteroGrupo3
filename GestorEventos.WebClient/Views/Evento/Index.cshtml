@model IEnumerable<GestorEventos.Servicios.Entidades.Models.EventoModel>

@{
    ViewData["Title"] = "Lista de eventos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/reserva/style_Persona.css" />
<div class="persona_container">
<h1>@ViewData["Title"]</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreEvento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaEvento)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreEvento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaEvento)
            </td>
            <td>
                        <button type="button" class="btn btn-info" data-toggle="modal" data-target="#eventoMenuModal" data-idevento="@item.IdEvento" data-info="@item.NombreEvento">Seleccionar</button>
            </td>
        </tr>
}
    </tbody>
</table>
</div>

@Html.Partial("_ModalMenuEvento")