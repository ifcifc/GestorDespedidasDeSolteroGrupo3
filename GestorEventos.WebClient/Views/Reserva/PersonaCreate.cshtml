@model GestorEventos.Servicios.Entidades.Models.PersonaModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/reserva/style_PersonaCreate.css" />


<div class="persona_container">

    <h1 style="padding-left: 1rem;">Cargue los datos de la persona a agasajar</h1>
    <hr />
    <div class="row">
        <div>
            <form asp-action="PersonaCreate">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="IdPersona" class="form-control" value="0" hidden />
                <div class="d-flex justify-content-center align-items-center">
                    <div class="form_persona">
                        <div class="form-group">
                            <label asp-for="Nombre" class="control-label"></label>
                            <input asp-for="Nombre" class="form-control" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Apellido" class="control-label"></label>
                            <input asp-for="Apellido" class="form-control" />
                            <span asp-validation-for="Apellido" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Telefono" class="control-label"></label>
                            <input asp-for="Telefono" class="form-control" />
                            <span asp-validation-for="Telefono" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label  class="control-label">Provincias</label>
                            <select class="form-control" id="select_provincias">
                                @foreach (var p in ViewBag.Provincias)
                                {
                                    <option value="@p.IdProvincia">@p.Nombre</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form_persona">
                        <div class="form-group">
                            <label asp-for="IdLocalidad" class="control-label">Localidades</label>
                            <select asp-for="IdLocalidad" class="form-control" id="select_localidades">
                                @foreach (var p in ViewBag.Localidad)
                                {
                                    <option value="@p.IdLocalidad">@p.Nombre</option>
                                }
                            </select>
                            <span asp-validation-for="IdLocalidad" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DireccionCalle" class="control-label"></label>
                            <input asp-for="DireccionCalle" class="form-control" />
                            <span asp-validation-for="DireccionCalle" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DireccionNumero" class="control-label"></label>
                            <input asp-for="DireccionNumero" class="form-control" />
                            <span asp-validation-for="DireccionNumero" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DireccionPiso" class="control-label"></label>
                            <input asp-for="DireccionPiso" class="form-control" value="0"/>
                            <span asp-validation-for="DireccionPiso" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DireccionDepartamento" class="control-label"></label>
                            <input asp-for="DireccionDepartamento" class="form-control" value="-"/>
                            <span asp-validation-for="DireccionDepartamento" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group d-flex justify-content-center">
                    <input type="submit" value="Siguiente" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script src="~/js/localidadprovincia.js" asp-append-version="true"></script>
