@model IEnumerable<GestorEventos.Servicios.Entidades.Models.LocalidadModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-action="Lista">
    <div class="form-group">
        <label class="control-label">Provincia</label>
        <select name="IdProvincia" onchange="this.form.submit()">
            <option value="0">-</option>
            @foreach (var p in ViewBag.Provincias)
            {
                <option value="@p.IdProvincia">@p.Nombre</option>
            }
        </select>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Provincia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CodigoArea)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Provincia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CodigoArea)
            </td>
            <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.IdLocalidad }) |
                    @Html.ActionLink("Details", "Details", new { id = item.IdLocalidad }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.IdLocalidad })
            </td>
        </tr>
}
    </tbody>
</table>
